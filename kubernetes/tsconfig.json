{
	"extends": "@pkg/tsconfig/commonjs.json",
	"include": ["./src/charts/**/*", "./src/libs/**/*", "./src/*.ts"],
	"exclude": ["node_modules"],
	"compilerOptions": {
		"target": "es2022",
		"module": "CommonJS",
		"rootDir": "./src",
		"baseUrl": "./src",
		"outDir": "./dist",
		"strict": true,
		"skipLibCheck": true,
		"types": ["node"],
		"paths": {
			"@charts/*": ["./charts/*"],
			"@imports/*": ["./imports/*"],
			"@libs/*": ["./libs/*"]
		}
	}
}
